<main class="main" style="padding-top: 40px;">
    <section>
        <div class="container">

            <table class="table" style="margin-top: 20px ;">
                <thead>
                    <tr>
                        <th scope="col">Prodect</th>
                        <th scope="col">Name</th>
                        <th scope="col">Quauntity</th>
                        <th scope="col">Price</th>
                        <th scope="col">Remove</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each products}}
                    <tr>
                        <td><img style="width: 50px; height: 50px;" src="/productimage/{{this.productDetail._id}}.jpg"
                                alt=""></td>
                        <td>{{this.productDetail.Name}}</td>
                        <td><button class="cart-items-counter  mr-3"
                                onclick="changeQuantity('{{this._id}}','{{this.productDetail._id}}',-1)">-</button>
                            <span id="qua">{{this.quantity}}</span><button class="cart-items-counter ml-3"
                                onclick="changeQuantity('{{this._id}}','{{this.productDetail._id}}',1)">+</button>
                        </td>
                        <td>{{this.productDetail.Price}}</td>
                        <td><a href="" class="btn btn-danger"
                                onclick="removeProduct('{{this.productDetail._id}}','{{this._id}}')">Remove</a></td>

                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </section>
</main>

<script>

    function changeQuantity(cartId, proId, count) {
        let num = $('#qua').html()
        if (num == 1 && count == -1) {

            alert("Minimum qunatity is zero try to remove item from cart")

        } else {
            $.ajax({
                url: '/change-product-quantity',
                data: {
                    cart: cartId,
                    prod: proId,
                    count: count
                },
                method: 'post',
                success: (response) => {
                    if (response) {
                        num = parseInt(num) + response.change;
                        $('#qua').html(num);
                        alert("Quantity of product is now " + num)
                    }

                }

            })
        }

    } function removeProduct(proId, cartId) {
        $.ajax({
            url: '/remove-product',
            data: {
                cart: cartId,
                prod: proId,
            },
            method: 'post',
            success: (response) => {

                alert("Product Removed");

            }

        })
    }
</script>