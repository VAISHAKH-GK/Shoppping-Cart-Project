<main class="main" style="padding-top: 40px;">
    <section>
        <div class="container">

            <table class="table" style="margin-top: 20px ;">
                <thead>
                    <tr>
                        
                        <th scope="col">User</th>
                        <th scope="col">Price</th>
                        <th scope="col">Payment</th>
                        <th scope="col">Status</th>
                        <th scope="col">Email</th>
                        <th scope="col">Address</th>
                        <th scope="col">Mobile</th>

                    </tr>
                </thead>
                <tbody>
                    {{#with orderDetails}}
                    <tr>
                        <td>{{this.0.user.Name}}</td>
                        <td>{{this.0.Price}}</td>
                        <td>{{this.0.payment}}</td>
                        <td>{{this.0.status}}</td>
                        <td>{{this.0.delivary.Email}}</td>
                        <td>{{this.0.delivary.address}}</td>
                        <td>{{this.0.delivary.mobile}}</td>
                    </tr>
                    {{/with}}
                </tbody>
            </table>
            <table class="table" style="margin-top: 20px ;">
                <thead>
                    <tr>
                        <th scope="col">Item</th>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th>Price</th>

                    </tr>
                </thead>
                <tbody>
                     {{#each orderDetails}}
                    <tr>
                       
                        <td><img style="width: 50px; height: 50px;" src="/productimage/{{this.productDetail._id}}.jpg" alt=""></td>
                        <td>{{this.productDetail.Name}}</td>
                        <td>{{this.productDetail.Category}}</td>
                        <td>{{this.productDetail.Price}}</td>
                       
                    </tr>
                     {{/each}}
                </tbody>
            </table>
            <hr>
        </div>
    </section>
</main>