<main>
    <section>
        <div class="container">
            <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="p-name">Name</label>
                    <input type="text" class="form-control" id="p-name"  name="p-name" placeholder="Product Name">
                </div>
                <div class="form-group">
                    <label for="p-cate">Category</label>
                    <input type="text" class="form-control" id="p-cate" placeholder="Category" name="p-cate">
                </div>
                <div class="form-group">
                    <label for="p-disc">Discription</label>
                    <input type="text" class="form-control" id="p-disc"  name="p-disc" placeholder="Product Discription">
                </div>
                <div class="form-group">
                    <label for="pimg">Image</label>
                    <input type="file" class="form-control" id="pimg" name="pimg">
                </div>
                
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </section>
</main>